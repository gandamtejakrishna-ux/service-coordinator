<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Default root log level -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Silence Kafka internal logs -->
    <logger name="org.apache.kafka" level="ERROR"/>
    <logger name="org.apache.kafka.clients" level="ERROR"/>
    <logger name="org.apache.kafka.common" level="ERROR"/>

    <!-- Silence Akka Kafka framework logs -->
    <logger name="akka.kafka" level="ERROR"/>
    <logger name="akka.stream.kafka" level="ERROR"/>
    <logger name="akka.kafka.internal" level="ERROR"/>

</configuration>
